<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Avenida">


    <Button
        android:id="@+id/irCaminoPueblo"
        android:layout_width="121dp"
        android:layout_height="207dp"
        android:layout_marginTop="200dp"
        android:alpha="1"
        android:background="#00FFFFFF"
        android:color="#00FF0000"
        android:onClick="irCaminoPueblo"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/irAvenida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/irAvenida"
        android:layout_width="410dp"
        android:layout_height="238dp"
        android:alpha="1"
        android:background="#00FFFFFF"
        android:color="#00FF0000"
        android:onClick="irPlaza"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/irCombates"
        android:layout_width="121dp"
        android:layout_height="207dp"
        android:layout_marginTop="192dp"
        android:alpha="1"
        android:background="#00FFFFFF"
        android:color="#00FF0000"
        android:onClick="irCombates"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/irAvenida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/irSupervivencia"
        android:layout_width="121dp"
        android:layout_height="207dp"
        android:layout_marginTop="164dp"
        android:alpha="1"
        android:background="#00FFFFFF"
        android:color="#00FF0000"
        android:onClick="irLideres"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/irAvenida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avenida" />

</androidx.constraintlayout.widget.ConstraintLayout>